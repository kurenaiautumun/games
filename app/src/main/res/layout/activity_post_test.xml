<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_disp">

    <TextView
        android:id="@+id/questionTextViewPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What is the capital of France?"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="25dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/edges"
        android:padding="10dp"/>

    <RadioGroup
        android:id="@+id/optionsRadioGroupPOST"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/questionTextViewPost"
        android:layout_margin="15dp"
        app:layout_constraintTop_toBottomOf="@id/questionTextViewPost"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        >

        <RadioButton
            android:id="@+id/optionARadioButtonPost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A. London"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/radio_buttons"
            android:padding="10dp"
            android:button="@null"
            />

        <RadioButton
            android:id="@+id/optionBRadioButtonPost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="B. Berlin"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/radio_buttons"
            android:padding="10dp"
            android:button="@null"/>

        <RadioButton
            android:id="@+id/optionCRadioButtonPost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="C. Paris"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/radio_buttons"
            android:padding="10dp"
            android:button="@null"/>

        <RadioButton
            android:id="@+id/optionDRadioButtonPost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="D. Madrid"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/radio_buttons"
            android:padding="10dp"
            android:button="@null"/>
    </RadioGroup>
    <TextView
        android:id="@+id/resultTextViewPost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/optionsRadioGroupPOST"
        android:textSize="25sp"
        android:textAlignment="center"
        android:layout_margin="20dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/submitButtonPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        app:layout_constraintTop_toBottomOf="@id/resultTextViewPost"
        android:layout_marginTop="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/button"
        android:textSize="20sp"
        android:padding="10dp"
        />
    <TextView
        android:id="@+id/TimerViewPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/submitButtonPost"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="10 sec"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
